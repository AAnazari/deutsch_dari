<%- include('../partials/header.ejs') %>
<main>
    <div class="content">
        <h1>  User Profile</h1>
        <%- include('../partials/flash_messages.ejs') %>
        <div class="personalInfo">
            <h2>Basic Info</h2>
            <table>
                <tr>
                    <td> Full Name </td>
                    <td> <%= user.firstname + ', ' + user.lastname %> </td>
                </tr>
                <tr>
                    <td> Gender </td>
                    <td> <%= user.gender %> </td>
                </tr>
            </table>
        </div>
        <div class="personalInfo">
            <h2>Contact Info</h2>
            <table>
                <tr>
                    <td> Email Address </td>
                    <td> <%= user.email %> </td>
                </tr>
            </table>
        </div>
        <div id="edit">
            <a href="setting/account"><button id="edit-profile">Edit Your Profile</button> </a>
        </div>
    </div>
    <aside>
        <h1>ASIDE</h1>
        <p>This is an Aside Part.</p>
    </aside>
</main>
<%- include('../partials/footer.ejs') %>
