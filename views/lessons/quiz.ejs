<%- include('../partials/header.ejs') %>
<div class="lesson content">
    <h2> Lessons</h2>
    <% if (quizes.length > 0) { %>
        <h3 class="question"> Lesson <%= lessonNo %></h3>
        <% quizes.forEach(quiz => { %>
            <p class="question"><%= quiz.qnumber %></p>
            <p class="question"><%= quiz.question %></p>
            <select class="question">
                <option value="a"> <%= quiz.options[0] %> </option>
                <option value="b"> <%= quiz.options[1] %></option>
                <option value="c"> <%= quiz.options[2] %> </option>
                <option value="d"> <%= quiz.options[3] %></option>
            </select>
        <% }) %>
    <% } else { %>
        <p>There is no Quiz to display. </p>
    <% } %>
</div>
<%- include('../partials/footer.ejs') %>
